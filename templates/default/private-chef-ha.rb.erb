topology 'ha'
api_fqdn '<%= @chef_server_config['api_fqdn'] %>'

<% @chef_servers.each do |server| -%>
server '<%= server[:fqdn] %>',
  :ipaddress => '<%= server[:ipaddress] %>',
  <% if server[:bootstrap] -%>
  :bootstrap => true,
  <% end -%>
  :role => '<%= server[:role] %>'

  <% if server[:bootstrap] -%>
backend_vip '<%= server[:ipaddress] %>',
  :ipaddress => '<%= server[:ipaddress] %>',
  :device => 'eth0'

  <% end -%>
<% end -%>
